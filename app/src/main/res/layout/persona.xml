<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cv"
        app:cardCornerRadius="15dp"
        android:padding="5dp"
        android:layout_margin="20dp"

        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"

            android:background="#C30E0E0E"
            android:padding="10dp">

            <TextView
                android:id="@+id/nombrePersona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="serif-monospace"
                android:textColor="@color/color_text"
                android:textSize="30sp"
                android:textStyle="bold" />


            <ImageView
                android:id="@+id/fotoPersona"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/nombrePersona"
                android:layout_marginTop="-5dp"
                android:paddingTop="5dp" />

            <TextView
                android:id="@+id/edadPersona"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fotoPersona"
                android:layout_marginStart="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="-107dp"
                android:layout_toEndOf="@+id/fotoPersona"
                android:layout_toRightOf="@+id/fotoPersona"
                android:padding="5dp"
                android:textColor="@color/color_text"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="115dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="155dp"
                android:layout_toEndOf="@+id/fotoPersona"
                android:layout_toRightOf="@+id/fotoPersona"
                android:textColor="@color/color_text"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
